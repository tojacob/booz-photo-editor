{
  "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./src",
      "forceConsistentCasingInFileNames": true,
      "lib": ["DOM", "ES2018"],
      "module": "ES2020",
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "noFallthroughCasesInSwitch": true,
      "outDir": "./dist/",
      "isolatedModules": true,
      "paths": {
        "~*": ["./*"]
      },
      "sourceMap": true,
      "strict": true,
      "target": "ES2017"
  },
  "include": [
      "./src/**/*"
  ]
}